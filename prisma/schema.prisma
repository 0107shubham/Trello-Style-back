generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  Post     Post[]

  @@unique([email])
}

model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      String
  author      User     @relation(fields: [authorId], references: [id])
  priority    String
  deadline    DateTime
  authorId    String   @db.ObjectId
}
